<Window x:Class="PersonalCars.WindowMarkEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalCars"
        mc:Ignorable="d"
        Title="Данные о марке" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource WindowStyle}"
        Icon="./Img/Icon.ico">
    <Grid>
        <Rectangle Style="{StaticResource Body}"/>
        <Image Source="Img/change.png" Width="150" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,0,0,0"/>

        <TextBox Name="Mark" HorizontalAlignment="Center" Height="30" Margin="200,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center"/>
        <Label Content="Название" HorizontalAlignment="Right" Margin="0,0,450,0" VerticalAlignment="Center" Height="30"/>
        <Button Name="btnSave" Content="Сохранить" HorizontalAlignment="Center" Margin="0,350,170,0" VerticalAlignment="Top" Width="120" Click="btnSave_Click"/>
        <Button Name="btnCancel" Content="Отмена" HorizontalAlignment="Center" Margin="170,350,0,0" VerticalAlignment="Top" Click="btnCancel_Click"/>
        <Label Content="Введите данные" HorizontalAlignment="Center" Margin="0,15,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
